<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
        </shape>
    </item>

    <!-- Transparent center area -->
    <item
        android:gravity="center"
        android:width="250dp"
        android:height="250dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Scanner frame -->
    <item
        android:gravity="center"
        android:width="250dp"
        android:height="250dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/primary" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Corner markers -->
    <item
        android:gravity="top|start"
        android:width="40dp"
        android:height="40dp"
        android:left="105dp"
        android:top="105dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle">
                <stroke
                    android:width="4dp"
                    android:color="@color/primary" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="top|end"
        android:width="40dp"
        android:height="40dp"
        android:right="105dp"
        android:top="105dp">
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <stroke
                    android:width="4dp"
                    android:color="@color/primary" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="bottom|start"
        android:width="40dp"
        android:height="40dp"
        android:left="105dp"
        android:bottom="105dp">
        <rotate android:fromDegrees="270">
            <shape android:shape="rectangle">
                <stroke
                    android:width="4dp"
                    android:color="@color/primary" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="bottom|end"
        android:width="40dp"
        android:height="40dp"
        android:right="105dp"
        android:bottom="105dp">
        <rotate android:fromDegrees="180">
            <shape android:shape="rectangle">
                <stroke
                    android:width="4dp"
                    android:color="@color/primary" />
                <size
                    android:width="20dp"
                    android:height="20dp" />
            </shape>
        </rotate>
    </item>
</layer-list> 