<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
        </shape>
    </item>

    <!-- Transparent scanning area -->
    <item
        android:gravity="center"
        android:width="250dp"
        android:height="250dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Corner markers -->
    <item
        android:gravity="top|start"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="top|start"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="top|end"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="bottom|start"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="top|end"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="180">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="bottom|end"
        android:width="40dp"
        android:height="40dp">
        <rotate android:fromDegrees="270">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" />
                <size
                    android:width="4dp"
                    android:height="40dp" />
            </shape>
        </rotate>
    </item>
</layer-list> 